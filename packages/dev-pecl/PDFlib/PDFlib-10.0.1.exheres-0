BASE_FILENAME="${PNV}-Linux-x64-php"
require php-pecl [ module=module work=${BASE_FILENAME} php_abis=[ 7.4 8.0 8.1 8.2 ] ]

SUMMARY="PDFlib is a development library for creating PDF"
HOMEPAGE="https://www.pdflib.com"
DOWNLOADS="https://www.pdflib.com/binaries/${PN}/1001/${BASE_FILENAME}.tar.gz"
LICENCES="all-rights-reserved"
SLOT="0"
PLATFORMS="~amd64"

MYOPTIONS=""
DEPENDENCIES=""

php-pecl_prepare_one_multibuild() {
    :
}

php-pecl_configure_one_multibuild() {
    :
}

php-pecl_install_one_multibuild() {
    local abi=$(php-pecl_get_abi)

    exeinto $(php-config-${abi} --extension-dir)
    newexe bind/php/php-"${abi//./}0"/php_pdflib.so ${PN}.so

    edo mkdir -p "${IMAGE}"/etc/php-${abi}
    echo "extension = ${PN}.so" > "${IMAGE}"/etc/php-${abi}/${PN}.ini
}

