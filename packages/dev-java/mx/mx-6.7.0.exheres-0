LICENCES="GPL-2"
PLATFORMS="~amd64"
SLOT="0"

SUMMARY="Command line based tool for managing the development of (primarily) Java code"

require github [ user=graalvm project=mx tag=${PV} ]

DEPENDENCIES="
    run:
        dev-lang/python:*
"

src_prepare() {
    edo sed -e /CC/s/gcc/${CC}/ -i ninja-toolchains/gcc.ninja
    edo sed -e /CXX/s/g++/${CXX}/ -i ninja-toolchains/gcc.ninja
    edo sed -e /AR/s/ar/${AR}/ -i ninja-toolchains/gcc.ninja
    edo sed -e '/add_debug_prefix(self.suite.vc_dir)/d' -i mx_native.py
}

src_install() {
    insinto /usr/share/${PNV}
    doins -r */
    exeinto /usr/share/${PNV}
    doexe mx *.py
    dodir /usr/$(exhost --target)/bin
    dosym /usr/share/${PNV}/mx /usr/$(exhost --target)/bin/mx
}

pkg_postinst() {
    edo mkdir -p /usr/share/${PNV}/java/com.oracle.jvmtiasmagent/include
}

