require github [ user=lib${PN} project=lib${PN} release=v${PV} suffix="tar.gz" ]

SUMMARY="libvips is a demand-driven, horizontally threaded image processing library"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64"

MYOPTIONS="exif fftw fits gif gsf heif imagemagick jpeg lcms openexr orc png svg tiff webp"
DEPENDENCIES="
    build: 
        virtual/pkg-config
    build+run:
        app-text/poppler
        dev-libs/expat
        dev-libs/glib:2
        dev-libs/libxml2:2.0
        media-libs/fontconfig
        sys-libs/zlib
        x11-libs/cairo
        x11-libs/pango
        exif? ( media-libs/libexif )
        fftw? ( sci-libs/fftw )
        fits? ( sci-libs/cfitsio )
	gif? ( media-libs/cgif )
        gsf? ( office-libs/libgsf )
        heif? ( media-libs/libheif )
        imagemagick? ( media-gfx/ImageMagick[fftw?][heif?][lcms?][openexr?][pango][svg?][tiff?] )
        jpeg? ( 
            media-libs/libjpeg-turbo 
            media-libs/OpenJPEG
        )
        lcms? ( media-libs/lcms2[tiff?] )
        openexr? (
            media-libs/imath
            media-libs/openexr[>=3]
        )
        orc? ( dev-libs/orc:0.4 )
        png? ( 
            media-gfx/libimagequant
            media-libs/libpng:=
        )
        svg? ( gnome-desktop/librsvg:2 )
        tiff? ( media-libs/tiff:=[webp?] )
        webp? ( media-libs/libwebp:=[tiff?] )
"

# All tests are run, even if an option is disabled.
RESTRICT="test"

# Unpackaged
DEFAULT_SRC_CONFIGURE_PARAMS=(
    --without-matio
    --without-openslide
    --without-pdfium
)

DEFAULT_SRC_CONFIGURE_OPTIONS=(
    'imagemagick --with-magickpackage=MagickCore --without-magick'
)

DEFAULT_SRC_CONFIGURE_OPTION_WITHS=(
    'gif cgif'
    'exif libexif'
    'fftw'
    'fits cfitsio'
    'gsf'
    'heif'
    'jpeg'
    'lcms'
    'openexr OpenEXR'
    'orc'
    'png'
    'svg rsvg'
    'tiff'
    'webp libwebp'
)

