[Unit]
Description=osquery -- SQL powered operating system instrumentation, monitoring, and analytics
Documentation=https://osquery.io/docs
After=network.target
ConditionPathExists=/etc/osquery/osquery.flags

[Service]
Type=simple
Restart=on-failure
RestartSec=10

User=root
Group=root

ExecStart=/opt/osquery/bin/osqueryd --flagfile=/etc/osquery/osquery.flags

StandardOutput=journal
StandardError=journal
SyslogIdentifier=osqueryd

[Install]
WantedBy=multi-user.target
