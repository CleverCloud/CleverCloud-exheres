require systemd-service

SUMMARY="Lightweight connection pooler for PostgreSQL"
HOMEPAGE="http://pgfoundry.org/projects/${PN}/"

LICENCES="BSD"
SLOT="0"
MYOPTIONS=""

DEPENDENCIES="
    build:
    build+run:
        dev-db/postgresql
        dev-libs/libevent
"

src_install() {
    install_systemd_files

    insinto /etc/${PN}
    doins ${FILES}/${PN}.ini

    default
}

