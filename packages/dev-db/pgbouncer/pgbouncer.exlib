require systemd-service [ systemd_files=[ etc/${PN}.{service,socket} ] ]


export_exlib_phases src_prepare src_install

SUMMARY="Lightweight connection pooler for PostgreSQL"
HOMEPAGE="https://www.${PN}.org"
DOWNLOADS="${HOMEPAGE}/downloads/files/${PV}/${PNV}.tar.gz"

LICENCES="ISC"
SLOT="0"
MYOPTIONS="
    systemd
    ( providers: libressl openssl ) [[ number-selected = exactly-one ]]
"

# tests require python and unpackaged dev-python/psycopg
RESTRICT="test"

DEPENDENCIES="
    build:
        virtual/pkg-config
    build+run:
        dev-db/postgresql-client
        dev-libs/libevent:=
        net-dns/c-ares
        sys-libs/pam
        providers:libressl? ( dev-libs/libressl:= )
        providers:openssl? ( dev-libs/openssl:= )
        systemd? ( sys-apps/systemd )
        user/postgres
        group/postgres
"

DEFAULT_SRC_CONFIGURE_PARAMS=(
    --enable-evdns
    --disable-werror
    --with-cares
    --with-openssl
    --with-pam
)
DEFAULT_SRC_CONFIGURE_OPTION_WITHS=(
    systemd
)

pgbouncer_src_prepare() {
    default

    edo sed \
        -e 's:/var/run:/run:g' \
        -e 's:unix_socket_dir = /tmp:unix_socket_dir = /run/postgresql:g' \
        -i etc/${PN}.ini
}

pgbouncer_src_install() {
    default

    insinto /etc/${PN}
    doins etc/${PN}.ini
    edo touch "${IMAGE}"/etc/${PN}/userlist.txt

    keepdir /var/log/${PN}
    edo chown -R postgres:postgres "${IMAGE}"/var/log/${PN}

    install_systemd_files

    insinto /usr/$(exhost --target)/lib/tmpfiles.d
    hereins ${PN}.conf <<EOF
d /run/pgbouncer 0755 postgres postgres
EOF
}

