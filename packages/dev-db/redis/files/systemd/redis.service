[Unit]
Description=Redis Server
After=network.target
Requires=network.target

[Service]
User=redis
WorkingDirectory=/var/db/redis
ExecStart=/usr/bin/redis-server /etc/redis.conf
Restart=always

[Install]
WantedBy=multi-user.target
