require systemd-service [ systemd_files=[ "contrib/systemd/etcd.service" ] ]
require github [ user="etcd-io" tag="v${PV}" ]

SUMMARY="A distributed, reliable key-value store for the most critical data of a distributed system"
PLATFORMS="~amd64"
LICENCES="Apache-2.0"
SLOT="0"
DEPENDENCIES="
    build:
        dev-lang/go
    build+run:
        group/${PN}
        user/${PN}
"

RESTRICT=test
DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}/systemd-service.patch"
)

src_unpack() {
    default

    export GOMODCACHE="${FETCHEDDIR}/go/pkg/mod"

    esandbox disable_net

    edo pushd "${WORK}" 
    edo go mod download -x
    edo popd

    esandbox enable_net
}

src_compile() {
    edo mkdir bin
    edo cd server
    edo go build -v -installsuffix cgo -ldflags="-X=go.etcd.io/etcd/api/v3/version.GitSHA=v${PV}" -o "../bin/${PN}" .

    edo cd ../etcdctl
    edo go build -v -installsuffix cgo -ldflags="-X=go.etcd.io/etcd/api/v3/version.GitSHA=v${PV}" -o "../bin/${PN}ctl" .

    edo cd ../etcdutl
    edo go build -v -installsuffix cgo -ldflags="-X=go.etcd.io/etcd/api/v3/version.GitSHA=v${PV}" -o "../bin/${PN}utl" .
}

src_install() {
    install_systemd_files

    dobin "bin/${PN}"
    dobin "bin/${PN}ctl"
    dobin "bin/${PN}utl"

    edo mkdir -p "${IMAGE}/var/lib/${PN}"
    edo touch "${IMAGE}/var/lib/${PN}/.keep-dir"
    edo chown -R ${PN}: "${IMAGE}/var/lib/${PN}"
    edo chmod 0700 "${IMAGE}/var/lib/${PN}"

    edo mv etcd.conf.yml.sample conf.yml
    insinto "/etc/${PN}"
    doins conf.yml
}
