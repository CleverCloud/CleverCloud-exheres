require github [ tag=v${PV} ]
require postgresql

SUMMARY="V8 Engine Javascript Procedural Language add-on for PostgreSQL"

LICENCES="BSD-3"
SLOT="0"

DEPENDENCIES="
    build+run:
        dev-libs/icu:*
        dev-libs/v8[>=8.6.405-r1]
"

prepare_one_multibuild() {
    default
    edo sed \
        -e 's/^PG_CONFIG\s*=.*/PG_CONFIG ?= pg_config/g' \
        -e '/Makefile.linux/d' \
        -i Makefile
}

compile_one_multibuild() {
    emake CUSTOM_CC=$(exhost --tool-prefix)g++ V8_OUTDIR=/usr/$(exhost --target)/lib AUTOV8_STATIC_LIBS=-lv8_monolith all
}

install_one_multibuild() {
    emake CUSTOM_CC=$(exhost --tool-prefix)g++ DESTDIR=${IMAGE} install
}

