# We need the latest commits for compatibility with PG12
# https://github.com/postgrespro/pg_wait_sampling/commit/9f56819d5370bd2710c051189a6af3c5e7a31fbf
MY_REV="9f56819d5370bd2710c051189a6af3c5e7a31fbf"
require github [ user="postgrespro" rev="${MY_REV}" ]
require postgresql [ work="${PN}-${MY_REV}" ]

SUMMARY="Sampling based statistics of wait events"
PLATFORMS="~amd64"
LICENCES="PostgreSQL"
SLOT="0"

DEPENDENCIES=""

prepare_one_multibuild() {
    export USE_PGXS=1

    postgresql_prepare_one_multilib
}

